<style type="text/css">
	.top_level {
		position: absolute;
		top: 29px;
		left: 6px;
		height: 160px;
		width: 168px;
		z-index: 20;
		padding-top: 6px;
		font-family: Tahoma, Geneva, sans-serif;
		font-size: 9.2pt;
		color: #FFF;
		font-weight: bold;
		text-align: right;
		text-decoration: inherit;
		text-shadow: 0.1em 0.1em #333
	}

	#Topbar a {
		text-decoration: none;
	}

	.online {
		color: #008000;
	}

	.offline {
		color: #FF0000;
	}

	a.topfont {
		font-family: Verdana, Arial, Helvetica, sans-serif;
		font-size: 11px;
		text-decoration: none
	}
	a:hover.topfont {
		font-family: Verdana, Arial, Helvetica, sans-serif;
		font-size: 11px;
		color: #CCC;
		text-decoration:none
	}
	.player-name-line {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 164px;
    }
</style>

<div id="Topbar" class="Themebox" style="background-image:url({{ template_path }}/images/themeboxes/highscores/highscores.png);">
	<div class="top_level" style="background:url({{ template_path }}/images/themeboxes/bg_top.png)" align="	">
	<div style="margin-top: -2px"></div>
    {% for player in topPlayers %}
	    <div style="text-align:left;margin-top:4px"><a href="{{ getPlayerLink(player['name'], false) }} " class="topfont {% if player['online'] and online %}online{% else %}offline{% endif %}">
			{% if setting('core.online_outfit') %}
				<img style="position:absolute;margin-top:{% if player.looktype in setting('core.outfit_images_wrong_looktypes') %}-22px;margin-left:-0px;{% else %}-22px;margin-left:-12px;width: 49px;{%  endif %}" src="{{ player.outfit }}" alt="player outfit"/>
			{% endif %}
			    <div class="player-name-line">
				<span style="color: #CCC; margin-left: 40px;">{{ player['rank'] }} - </span>
				{{ player['name'] }}
				</div>
			<small><span style="color: white; margin-left: 50px">Level: ({{ player['level'] }})</span></small>
		</a>
	</div>
	{% endfor %}
	<div class="Bottom" style="background-image:url({{ template_path }}/images/general/box-bottom.gif); top: 10px;; left:-5px; position: relative;">
	</div>
</div>
</div>
<br/><br/><br/>
